<configuration>
    <!-- Define the appender for the log file -->
    <appender name="file" class="ch.qos.logback.core.FileAppender">
        <!-- for linux-->
        <!--<file>/opt/logs/aviation-lookup-service.log</file>-->

    <!--for windows env -->
    <file>C:\opt\logs\aviation-lookup-service.log</file>
        <encoder>
            <pattern>%date{ISO8601} [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Console Appender -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Define the root logger to use the file appender -->
    <root level="INFO">
        <appender-ref ref="file"/>
        <appender-ref ref="console"/>
    </root>
</configuration>
